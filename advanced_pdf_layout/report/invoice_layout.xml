<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_with_payments">
            <template id="web_external_layout_inherit_quotation" inherit_id="web.internal_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <xpath expr="//div[@class='header']" position="replace">
                    <div class="header">
                        <div class="col-12 row">
                            <div class="col-2 text-center">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
                                     style="height:100px;width:100px;"/>
                            </div>
                            <div class="col-4 text-left">
                                <span style="width:100%;">
                                    <font color="#000099">
                                        <span>
                                            <strong>
                                                <t t-esc="company.name"/>
                                            </strong>
                                        </span>
                                        <br/>
                                        <span>Tel.
                                            <t t-esc="company.phone"/>
                                        </span>
                                        <br/>
                                        <span>Fax:
                                            <t t-esc="company.vat"/>
                                        </span>
                                        <br/>
                                        <span>
                                            <t t-esc="company.state_id.name"/>
                                        </span>
                                        <span>
                                            <t t-esc="company.country_id.name"/>
                                        </span>
                                    </font>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="footer">
                        <div class="col-12" t-if="report_type == 'pdf'">
                            <div class="text-center" style="border-top: 1px solid #000099;margin-top:80px !important;">
                                <font color="#000099">
                                    <span style="font-size:12px;">
                                        <t t-esc="company.street"/>
                                    </span>
                                    ,
                                    <span>
                                        <t t-esc="company.street2"/>
                                    </span>&#160;
                                    <span>
                                        <t t-esc="company.city"/>
                                    </span>&#160;
                                    <span>
                                        <t t-esc="company.zip"/>
                                    </span>
                                    <span>
                                        <i class="fa fa-envelope-o">
                                            <t t-esc="company.email" class=""/>
                                        </i>
                                    </span>&#160;
                                    <span>
                                        <i class="fa-dribbble">
                                            <t t-esc="company.website"/>
                                        </i>
                                    </span>
                                </font>
                            </div>
                        </div>
                    </div>
                </xpath>
            </template>
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="col-12" style="margin-top:100px;">
                            <h3>
                                <center>
                                    <b>
                                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                            <u>
                                                <font color="#333399">INVOICE</font>
                                            </u>
                                        </span>
                                    </b>
                                </center>
                            </h3>
                            <h3>
                                <center>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'proforma2'">
                                        <b>
                                            <u>
                                                <font color="#333399">PRO-FORMA</font>
                                            </u>
                                        </b>
                                    </span>
                                </center>
                            </h3>
                            <h3>
                                <center>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                        <b>
                                            <u>
                                                <font color="#333399">DRAFT INVOICE</font>
                                            </u>
                                        </b>
                                    </span>
                                </center>
                            </h3>
                            <h3>
                                <center>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                        <b>
                                            <u>
                                                <font color="#333399">CANCELLED INVOICE
                                                </font>
                                            </u>
                                        </b>
                                    </span>
                                </center>
                            </h3>
                            <h3>
                                <center>
                                    <span t-if="o.move_type == 'out_refund'">
                                        <b>
                                            <u>
                                                <font color="#333399">REFUND&#160;&#160;إعادة مال</font>
                                            </u>
                                        </b>
                                    </span>
                                </center>
                            </h3>
                            <h3>
                                <center>
                                    <span t-if="o.move_type == 'in_refund'">
                                        <b>
                                            <u>
                                                <font color="#333399">VENDOR REFUND</font>
                                            </u>
                                        </b>
                                    </span>
                                </center>
                            </h3>
                            <h3>
                                <center>
                                    <b>
                                        <span t-if="o.move_type == 'in_invoice'">
                                            <u>
                                                <font color="#333399">VENDOR BILL</font>
                                            </u>
                                        </span>
                                    </b>
                                </center>
                            </h3>
                        </div>
                        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                        <div class="col-12">
                            <div class="col-6 pull-right"
                                 style="padding-left:1px;padding-top:1%; padding-bottom:1%;margin-top:40px;margin-top:2px;">
                                <table style="width:100%;font-size:15px;">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <font color="#000099">Payment Method</font>
                                                </strong>
                                            </td>
                                            <td>
                                                <font color="#000099">:</font>
                                                <span>
                                                    <t t-if="o.invoice_payment_term_id.name"
                                                       t-esc="o.invoice_payment_term_id.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <font color="#000099">Sales Rep</font>
                                                </strong>
                                            </td>
                                            <td>
                                                <font color="#000099">:</font>
                                                <span>
                                                    <t t-if="o.invoice_user_id.name" t-esc="o.invoice_user_id.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <font color="#000099">Source</font>
                                                </strong>
                                            </td>
                                            <td>
                                                <font color="#000099">:</font>
                                                <span>
                                                    <t t-if="o.invoice_origin" t-esc="o.invoice_origin"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6"
                                 style="padding-left:1px;margin-left:-5px; padding-top:1%; padding-bottom:1%;">
                                <table style="width:90%;font-size:15px;margin-left:15px;">
                                    <tbody>
                                        <tr>
                                            <td class="text-left" style="width:38%">
                                                <strong>
                                                    <font color="#000099">Invoice No</font>
                                                </strong>
                                                <td>
                                                    <font color="#000099">:</font>
                                                    <span>
                                                        <t t-esc="o.name"/>
                                                    </span>
                                                </td>

                                            </td>

                                        </tr>
                                        <tr>
                                            <td class="text-left" style="width:38%">
                                                <strong>
                                                    <font color="#000099">Invoice Date</font>
                                                </strong>
                                                <td>
                                                    <font color="#000099">:</font>
                                                    <span>
                                                        <t t-esc="o.invoice_date"/>
                                                    </span>
                                                </td>

                                            </td>

                                        </tr>
                                        <tr>
                                            <td class="text-left" style="width:38%">
                                                <strong>
                                                    <font color="#000099">Customer Name</font>
                                                </strong>
                                                <td>
                                                    <font color="#000099">:</font>
                                                    <span>
                                                        <t t-esc="o.partner_id.name"/>
                                                    </span>
                                                </td>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <div class="col-12">
                            <table class="table table-sm fixed o_main_table" name="invoice_line_table"
                                   style="border: 5px #333399 double; border-collapse: collapse; border-radius: 25px !important;">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">البيان</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">كمية</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">وحدة</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">سعر الوحده</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">إجمالي</font>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th name="th_sm_product" class="text-center"
                                            style="border-center: 1px solid #333399 !important;border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">Description</font>
                                        </th>
                                        <th name="th_sm_unit" class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">Quantity</font>
                                        </th>
                                        <th name="th_sm_quantity" class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important;width:10px;">
                                            <font color="#333399">Unit</font>
                                        </th>
                                        <th name="th_sm_quantity" class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">Unit Price</font>
                                        </th>
                                        <th name="th_sm_remarks" class="text-center"
                                            style="border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">
                                                <span groups="account.group_show_line_subtotals_tax_excluded">Total
                                                </span>
                                                <span groups="account.group_show_line_subtotals_tax_included">Total
                                                </span>
                                            </font>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                    <t t-set="total_count" t-value="0"/>
                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="total_count" t-value="total_count +  line.quantity"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <td class="text-left"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <img t-if="line.product_id.image_1920"
                                                         t-att-src="'data:image/png;base64,%s' % to_text(line.product_id.image_1920)"
                                                         style="max-height: 65px;"/>
                                                    <span>&#160;</span>
                                                    <span t-field="line.product_id.name"/>
                                                </td>
                                                <td class="text-center"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td class="text-center"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                                                <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                                </td>
                                                <td class="text-center o_price_total"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span class="text-nowrap" t-field="line.price_subtotal"
                                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span class="text-nowrap" t-field="line.price_total"
                                                          groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr style="border-top: 1px solid #333399 !important">
                                        <td colspan="1" class="text-right"
                                            style="border-right: 1px solid #333399 !important;border-top: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">الكمية الإجمالية&#160;Total Quantity:</font>
                                        </td>
                                        <td class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important;border-top: 1px solid #333399 !important;">
                                            <t t-esc="round(total_count, 3)"/>
                                        </td>
                                        <td class="text-right" colspan="2"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important;border-top: 1px solid #333399 !important;">
                                            <font color="#333399">إجمالي&#160;Total</font>
                                        </td>
                                        <td style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important;border-top: 1px solid #333399 !important;text-align:center;">
                                            <span t-esc="current_subtotal"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr style="border-bottom: 1px solid #333399 !important">
                                        <td class="text-right" colspan="4"
                                            style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">صافي الإجمالي&#160;Net Total:</font>
                                        </td>
                                        <td style="border-right: 1px solid #333399 !important;" class="text-center">
                                            <t t-if="o.amount_total">
                                                <span t-esc="o.amount_total"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="current_subtotal"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-12">
                            <t>
                                <table class="table table-sm fixed o_main_table" name="invoice_line_table"
                                       style="width:50%;border: 1px #333399 double; border-collapse: collapse; border-radius: 10px !important;">
                                    <thead>
                                        <th colspan="2"
                                            style="text-align:center;">
                                            <font color="#333399">
                                                <strong>Bank Details</strong>
                                            </font>
                                        </th>
                                    </thead>
                                    <tbody>
                                        <tr t-if="company.beneficiary_name">
                                            <td style="font-size:12px;border-top:1px #333399 solid;width:35%;">
                                                <font color="#333399">
                                                    <strong>Beneficiary Name</strong>
                                                </font>
                                            </td>
                                            <td style="font-size:12px;border-top:1px #333399 solid;">
                                                <span>:
                                                    <t t-esc="company.beneficiary_name"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr t-if="company.iban">
                                            <td style="font-size:12px;">
                                                <font color="#333399">
                                                    <strong>IBAN</strong>
                                                </font>
                                            </td>
                                            <td>:
                                                <span style="font-size:12px;">
                                                    <t t-esc="company.iban"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr t-if="company.swift_code">
                                            <td style="font-size:12px;">
                                                <font color="#333399">
                                                    <strong>Swift Code</strong>
                                                </font>
                                            </td>
                                            <td>:
                                                <span style="font-size:12px;">
                                                    <t t-esc="company.swift_code"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr t-if="company.branch_address">
                                            <td style="font-size:12px;">
                                                <font color="#333399">
                                                    <strong>Branch Address</strong>
                                                </font>
                                            </td>
                                            <td>:
                                                <span style="font-size:12px;">
                                                    <t t-esc="company.branch_address"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr t-if="company.currency_id">
                                            <td style="font-size:12px;">
                                                <font color="#333399">
                                                    <strong>Currency</strong>
                                                </font>
                                            </td>
                                            <td style="font-size:12px;">
                                                <span style="font-size:12px;">:
                                                    <t t-esc="company.currency_id.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr t-if="company.account_type">
                                            <td style="font-size:12px;">
                                                <font color="#333399">
                                                    <strong>Account Type</strong>
                                                </font>
                                            </td>
                                            <td>:
                                                <span style="font-size:12px;">
                                                    <t t-esc="company.account_type"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr t-if="company.bank_name">
                                            <td style="font-size:12px;">
                                                <font color="#333399">
                                                    <strong>Bank Name</strong>
                                                </font>
                                            </td>
                                            <td>:
                                                <span style="font-size:12px;">
                                                    <t t-esc="company.bank_name"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <template id="report_invoice_without_payments_inherit">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang"
                       t-value="o.user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="advanced_pdf_layout.report_invoice_document_inherit" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="report_invoice_inherit">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang"
                       t-value="o.user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="advanced_pdf_layout.report_invoice_document_with_payments" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>