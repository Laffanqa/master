<odoo>
    <data>
        <template id="report_saleorder_document_inherit">
            <template id="web_external_layout_inherit_quotation" inherit_id="web.internal_layout">
                <t t-set="o" t-value="doc.with_context(lang=lang)"/>
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <xpath expr="//div[@class='header']" position="replace">
                    <div class="header">
                        <div class="col-12 row">
                            <div class="col-2 text-center">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
                                     style="height:100px;width:100px;"/>
                            </div>
                            <div class="col-4 text-left">
                                <span style="width:100%;">
                                    <font color="#000099">
                                        <span>
                                            <strong>
                                                <t t-esc="company.name"/>
                                            </strong>
                                        </span>
                                        <br/>
                                        <span>Tel.
                                            <t t-esc="company.phone"/>
                                        </span>
                                        <br/>
                                        <span>Fax:
                                            <t t-esc="company.vat"/>
                                        </span>
                                        <br/>
                                        <span>
                                            <t t-esc="company.state_id.name"/>
                                        </span>
                                        <span>
                                            <t t-esc="company.country_id.name"/>
                                        </span>
                                    </font>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="footer">
                        <div class="col-12" t-if="report_type == 'pdf'">
                            <div class="text-center" style="border-top: 1px solid #000099;margin-top:80px !important;">
                                <font color="#000099">
                                    <span style="font-size:12px;">
                                        <t t-esc="company.street"/>
                                    </span>
                                    ,
                                    <span>
                                        <t t-esc="company.street2"/>
                                    </span>&#160;
                                    <span>
                                        <t t-esc="company.city"/>
                                    </span>&#160;
                                    <span>
                                        <t t-esc="company.zip"/>
                                    </span>
                                    <span>
                                        <i class="fa fa-envelope-o">
                                            <t t-esc="company.email" class=""/>
                                        </i>
                                    </span>&#160;
                                    <span>
                                        <i class="fa-dribbble">
                                            <t t-esc="company.website"/>
                                        </i>
                                    </span>
                                </font>
                            </div>
                        </div>
                    </div>
                </xpath>
            </template>
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="col-12" style="margin-top:100px;">
                            <h3>
                                <center>
                                    <b>
                                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                            <font color="#333399">
                                                <span t-if="doc.state not in ['draft','sent']">Sale Order&#160;&#160;
                                                </span>
                                            </font>
                                            <font color="#333399">
                                                <span t-if="doc.state in ['draft','sent']">Quotation&#160;&#160;</span>
                                            </font>
                                        </t>
                                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                            <font color="#333399">
                                                <span>Pro-Forma Invoice #</span>
                                            </font>
                                        </t>
                                    </b>
                                </center>
                            </h3>
                        </div>
                        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                        <div class="col-12">
                            <div class="col-6 pull-right"
                                 style="padding-bottom:1%;margin-top:-20px;">
                                <table style="width:100%;font-size:15px;">
                                    <tbody>
                                        <br/>
                                        <tr>
                                            <td class="text-left" style="width:37%;">
                                                <span>
                                                    <font color="#333399">
                                                        Payment Method
                                                    </font>
                                                    <td>
                                                        <font color="#333399">:
                                                            <t t-esc="o.payment_term_id.name"/>
                                                        </font>
                                                    </td>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-left" style="width:37%;">
                                                <span>
                                                    <font color="#333399">
                                                        Sales Rep
                                                    </font>
                                                    <td>
                                                        <font color="#333399">:
                                                            <t t-esc="o.user_id.name"/>
                                                        </font>
                                                    </td>
                                                </span>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6"
                                 style="padding-left:1px;margin-left:-5px; padding-top:1%; padding-bottom:1%;">
                                <table style="width:100%;font-size:15px;margin-left:15px;">
                                    <tbody>
                                        <tr>
                                            <td class="text-left" style="width:33%;">
                                                <span>
                                                    <font color="#333399">
                                                        SaleOrder No
                                                    </font>
                                                    <td>
                                                        <font color="#333399">:
                                                            <t t-esc="o.name"/>
                                                        </font>
                                                    </td>

                                                </span>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td class="text-left" style="width:33%;">
                                                <span>
                                                    <font color="#333399">
                                                        Date
                                                    </font>
                                                    <td>
                                                        <font color="#333399">:
                                                            <t t-esc="o.date_order"/>
                                                        </font>
                                                    </td>

                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-left" style="width:33%;">
                                                <span>
                                                    <font color="#333399">
                                                        Customer Name
                                                    </font>
                                                    <td>
                                                        <font color="#333399">:
                                                            <t t-esc="o.partner_id.name"/>
                                                        </font>
                                                    </td>
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <div class="col-12">
                             <table class="table table-condensed table-bordered"
                                   style="border: 5px #333399 double;border-collapse: collapse; border-radius: 5px !important;font-size:15px;">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">البيان</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">كمية</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">وحدة</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">سعر الوحده</font>
                                        </th>
                                        <th class="text-center" style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">إجمالي</font>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th name="th_sm_product" class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">Description</font>
                                        </th>
                                        <th name="th_sm_unit" class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">Quantity</font>
                                        </th>
                                        <th name="th_sm_quantity" class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">Unit</font>
                                        </th>
                                        <th name="th_sm_quantity" class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">Unit Price</font>
                                        </th>
                                        <th name="th_sm_remarks" class="text-center"
                                            style="border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">
                                                <span groups="account.group_show_line_subtotals_tax_excluded">Total
                                                </span>
                                                <span groups="account.group_show_line_subtotals_tax_included">Total
                                                </span>
                                            </font>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="o.order_line"/>
                                    <t t-set="total_count" t-value="0"/>
                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="total_count" t-value="total_count +  line.product_uom_qty"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <td class="text-left"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span t-field="line.product_id.name"/>
                                                </td>
                                                <td class="text-center"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span t-field="line.product_uom_qty"/>
                                                </td>
                                                <td class="text-center"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                                </td>
                                                <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                                </td>
                                                <td class="text-center o_price_total"
                                                    style="border-right: 1px solid #333399 !important">
                                                    <span class="text-nowrap" t-field="line.price_subtotal"
                                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span class="text-nowrap" t-field="line.price_total"
                                                          groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr style="border-top: 1px solid #333399 !important">
                                        <td colspan="2" class="text-right"
                                            style="border-right: 1px solid #333399 !important;border-top: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important">
                                            <font color="#333399">الكمية الإجمالية&#160;Total Quantity:</font>
                                        </td>
                                        <td class="text-center"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important;border-top: 1px solid #333399 !important;">
                                            <t t-esc="round(total_count, 3)"/>
                                        </td>
                                        <td class="text-right" colspan="1"
                                            style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important;border-top: 1px solid #333399 !important;">
                                            <font color="#333399">إجمالي&#160;Total</font>
                                        </td>
                                        <td style="border-right: 1px solid #333399 !important;border-bottom: 1px solid #333399 !important;border-top: 1px solid #333399 !important;text-align:center;">
                                            <span t-esc="current_subtotal"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr style="border-bottom: 1px solid #333399 !important">
                                        <td class="text-right" colspan="4"
                                            style="border-right: 1px solid #333399 !important;">
                                            <font color="#333399">صافي الإجمالي&#160;Net Total:</font>
                                        </td>
                                        <td style="border-right: 1px solid #333399 !important;" class="text-center">
                                            <span t-esc="o.amount_total"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-12">
                            <t t-if="doc.state in ['draft','sent']">
                                <table class="table"
                                       style="border: 2px #333399 solid; border-radius: 10px !important; margin-bottom: 10px;width:100%;"
                                       name="signature_table">
                                    <thead>
                                        <tr>
                                            <th style="width:50%;text-align:center;border-bottom:2px #333399 solid;border-right:2px #333399 solid;">
                                                <font color="#333399">
                                                    Sales Signature
                                                </font>
                                            </th>
                                            <th style="width:50%;text-align:center;border-bottom:2px #333399 solid;">
                                                <font color="#333399">
                                                    General Manager Signature
                                                </font>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="height:65px;">
                                            <td style="border-right:2px #333399 solid;"></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <table class="table"
                                       style="border: 2px #333399 solid; border-radius: 10px !important; margin-bottom: 10px;width:100%;"
                                       name="signature_table">
                                    <thead>
                                        <tr>
                                            <th style="width:33.33%;text-align:center;border-bottom:2px #333399 solid;border-right:2px #333399 solid;">
                                                <font color="#333399">
                                                    توقيع المبيعات<br/>Sales Signature
                                                </font>
                                            </th>
                                            <th style="width:33.33%;text-align:center;border-bottom:2px #333399 solid;border-right:2px #333399 solid;">
                                                <font color="#333399">
                                                    توقيع الحسابات<br/>Accounting Signature
                                                </font>
                                            </th>
                                            <th style="width:33.33%;text-align:center;border-bottom:2px #333399 solid;">
                                                <font color="#333399">
                                                    توقيع المدير العام<br/>General Manager Signature
                                                </font>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="height:65px;">
                                            <td style="border-right:2px #333399 solid;"></td>
                                            <td style="border-right:2px #333399 solid;"></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <template id="report_saleorder_inherit">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="advanced_pdf_layout.report_saleorder_document_inherit" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>


    </data>
</odoo>
