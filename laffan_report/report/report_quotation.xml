<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_saleorder_inherit" model="ir.actions.report">
        <field name="name">Quotation / Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">laffan_report.report_saleorder_inherit</field>
        <field name="report_file">laffan_report.report_saleorder_inherit</field>
        <field name="print_report_name">'Quotation'
        </field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_saleorder_document_inherit">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="col-12">
                <div class="col-6" style="margin-left:70%;font-size:16px;">
                    <div>
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <strong>
                                <h2>
                                    <span t-if="doc.state not in ['draft','sent']">Order</span>
                                    <span t-if="doc.state in ['draft','sent']">Quotation</span>
                                </h2>
                            </strong>
                        </t>
                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                            <span>Pro-Forma Invoice #</span>
                        </t>
                    </div>
                    <span t-if="doc.name">
                        Refs:#
                        <t t-esc="doc.name"/>
                        <br/>
                        <br/>
                    </span>
                    <span t-if="doc.validity_date">
                        Validity Date:
                        <t t-esc="doc.validity_date"/>
                        <br/>
                        <br/>
                    </span>
                    <span t-if="doc.date_order and doc.state in ['draft','sent']">
                        Customer Refs:
                        <t t-esc="doc.date_order" t-options='{"widget": "date"}'/>
                        <br/>
                        <br/>
                    </span>
                    <span t-if="doc.account_manager" name="expiration_date">
                        Account Manager:
                        <t t-esc="doc.account_manager.name"/>
                    </span>
                </div>
                <!--                &lt;!&ndash;                <div class="col-6 text-left">&ndash;&gt;-->
                <!--            </div>-->
            </div>
            <div class="page">
                <div class="oe_structure"/>

                <div class="col-12" id="informations">
                    <span>
                        <strong>TO:</strong>
                    </span>
                    <br/>
                    <t t-if="doc.partner_id">
                        <strong>
                            <t t-esc="doc.partner_id.name"/>
                        </strong>
                        <br/>
                        <t t-esc="doc.partner_id.street"/>
                    </t>
                    <br/>
                    <br/>
                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                <table class="table" style="border-color:white !important;">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group;border-color:white !important;">
                        <tr style="border-color:white !important;">
                            <th name="th_description" class="text-left"
                                style="background-color:#6989b7;border-color:white !important;">
                                <font color="#ffffff">Description</font>
                            </th>
                            <th name="th_quantity" class="text-right"
                                style="background-color:#6989b7;border-color:white !important;">
                                <font color="#ffffff">QTY</font>
                            </th>
                            <th name="th_priceunit" class="text-right"
                                style="background-color:#6989b7;border-color:white !important;">
                                <font color="#ffffff">Unit Price</font>
                            </th>
                            <th name="th_discount" t-if="display_discount"
                                style="background-color:#6989b7;border-color:white !important;" class="text-right"
                                groups="product.group_discount_per_so_line">
                                <span>
                                    <font color="#ffffff">Disc.%</font>
                                </span>
                            </th>
                            <th name="th_subtotal" class="text-right"
                                style="background-color:#6989b7;border-color:white !important;">
                                <span groups="account.group_show_line_subtotals_tax_excluded">
                                    <font color="#ffffff">Amount</font>
                                </span>
                                <span groups="account.group_show_line_subtotals_tax_included">
                                    <font color="#ffffff">Total Price</font>
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">

                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="doc.order_line" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_name" style="border-color:white !important;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td name="td_quantity" class="text-right" style="border-color:white !important;">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td name="td_priceunit" class="text-right" style="border-color:white !important;">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right"
                                        style="border-color:white !important;"
                                        groups="product.group_discount_per_so_line">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td name="td_subtotal" class="text-right o_price_total"
                                        style="border-color:white !important;">
                                        <span t-field="line.price_subtotal"
                                              groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total"
                                              groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99" style="border-color:white !important;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99" style="border-color:white !important;">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99" style="border-color:white !important;">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix" name="so_total_summary" style="border-color:white !important;">
                    <div id="total" class="row" name="total" style="border-color:white !important;">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm" style="border-color:white !important;">
                                <!-- Tax totals -->
                                <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"
                                   style="border-color:white !important;"/>
                                <t t-call="account.document_tax_totals"/>
                            </table>
                        </div>
                    </div>
                </div>

                <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                    <div class="offset-8">
                        <strong>Signature</strong>
                    </div>
                    <div class="offset-8">
                        <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                    <div class="offset-8 text-center">
                        <p t-field="doc.signed_by"/>
                    </div>
                </div>

                <div class="oe_structure"/>

                <p t-field="doc.note"/>
                <p t-if="not is_html_empty(doc.payment_term_id.note)">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
                <p id="fiscal_position_remark"
                   t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="doc.fiscal_position_id.sudo().note"/>
                </p>
            </div>
        </t>
    </template>


    <template id="laffan_report.report_saleorder_inherit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="laffan_report.report_saleorder_document_inherit" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>


    <record id="sale.action_report_saleorder" model="ir.actions.report">
        <field name="name">Quotation / Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale.report_saleorder</field>
        <field name="report_file">sale.report_saleorder</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or
            'Order - %s' % (object.name)
        </field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
