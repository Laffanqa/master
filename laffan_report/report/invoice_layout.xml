<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_with_payments">
            <template id="web_external_layout_inherit_quotation" inherit_id="web.internal_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <xpath expr="//div[@class='header']" position="replace">
                    <div class="header">
                        <div class="col-12 row">
                            <div class="col-6 text-left">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
                                     style="height:105px;width:400px;"/>
                            </div>
                        </div>
                    </div>
                    <div class="footer">
                        <div class="col-12" t-if="report_type == 'pdf'">
                            <div class="text-center"
                                 style="height:10%;background-color:#accbd6;border-top: 1px solid #5e9cb3;margin-top:80px !important;">
                                <span>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</span>
                            </div>
                        </div>
                    </div>
                </xpath>
            </template>
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                        <div class="col-12" style="font-size:20px;">
                            <strong>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                    <font color="#6989b7">INVOICE</font>
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'proforma2'">
                                    <font color="#6989b7">PRO-FORMA</font>
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                    <font color="#6989b7">DRAFT INVOICE</font>
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                    <font color="#6989b7">CANCELLED INVOICE
                                    </font>
                                </span>
                                <span t-if="o.move_type == 'out_refund'">
                                    <font color="#6989b7">REFUND&#160;&#160;إعادة مال</font>
                                </span>
                                <span t-if="o.move_type == 'in_refund'">
                                    <font color="#6989b7">VENDOR REFUND</font>
                                </span>
                                <span t-if="o.move_type == 'in_invoice'">
                                    <font color="#6989b7">VENDOR BILL</font>
                                </span>
                                <font color="#6989b7">
                                    <t t-esc="o.name"/>
                                </font>
                            </strong>
                        </div>
                        <br/>
                        <div class="col-12 row">
                            <div class="col-6 text-left">
                                <table width="100%;" style="padding:5px;">
                                    <tr>
                                        <td width="40%" style="padding:5px;ffont-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Issued To :</font>
                                            </strong>
                                        </td>
                                        <td width="70%;"
                                            style="margin-left:-20px;padding:1px;font-size:14px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.partner_id.name"/>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;ffont-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Address :</font>
                                            </strong>
                                        </td>
                                        <td style="padding:5px;font-size:14px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <t t-if="o.partner_id.street">
                                                <font color="#000000"><t t-esc="o.partner_id.street"/>,
                                                </font>
                                            </t>
                                            <t t-if="o.partner_id.street2">
                                                <font color="#000000"><t t-esc="o.partner_id.street2"/>,
                                                </font>
                                            </t>
                                            <t t-if="o.partner_id.city">
                                                <font color="#000000">
                                                    <t t-esc="o.partner_id.city"/>
                                                </font>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;ffont-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Telephone :</font>
                                            </strong>
                                        </td>
                                        <td style="font-size:14px;padding:5px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.partner_id.phone"/>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;ffont-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Contact person :</font>
                                            </strong>
                                        </td>
                                        <td style="font-size:14px;padding:5px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.partner_id.name"/>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;ffont-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Project :</font>
                                            </strong>
                                        </td>
                                        <td style="padding:5px;font-size:14px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.project_id.name"/>
                                            </font>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table>
                                    <tr>
                                        <td width="40%" style="padding:5px;font-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Invoice Date :</font>
                                            </strong>
                                        </td>
                                        <td width="80%"
                                            style="padding:5px;font-size:14px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.invoice_date"/>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;font-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Refs # :</font>
                                            </strong>
                                        </td>
                                        <td style="padding:5px;font-size:14px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.source_id.name"/>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;font-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Due Date:</font>
                                            </strong>
                                        </td>
                                        <td style="padding:5px;font-size:14px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.invoice_date_due"/>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;font-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Customer Refs:</font>
                                            </strong>
                                        </td>
                                        <td width="150%"
                                            style="padding:5px;font-size:14px;background-color:#ebf2f7;border:1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.cust_ref"/>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:5px;font-size:14px;">
                                            <strong>
                                                <font color="#6989b7">Account Manager:</font>
                                            </strong>
                                        </td>
                                        <td style="padding:5px;font-size:14px;background-color:#ebf2f7;border: 1px solid #ffffff !important;">
                                            <font color="#000000">
                                                <t t-esc="o.account_manager.name"/>
                                            </font>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <div class="col-12">

                            <table class="table" style="border-color:white !important;font-size:14px;">
                                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                                <thead style="display: table-row-group;border-color:#6989b7 !important;">
                                    <tr style="border-color:#6989b7 !important;">
                                        <th name="th_description" class="text-left"
                                            style="background-color:#6989b7;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                            <font color="#ffffff">
                                                <strong>No</strong>
                                            </font>
                                        </th>
                                        <th name="th_description" class="text-left"
                                            style="background-color:#6989b7;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                            <font color="#ffffff">
                                                <strong>Description</strong>
                                            </font>
                                        </th>
                                        <th name="th_quantity" class="text-left"
                                            style="background-color:#6989b7;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                            <font color="#ffffff">
                                                <strong>QTY</strong>
                                            </font>
                                        </th>
                                        <th name="th_priceunit" class="text-left" width="15%"
                                            style="background-color:#6989b7;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                            <font color="#ffffff">
                                                <strong>Unit Price</strong>
                                            </font>
                                        </th>
                                        <th name="th_discount" t-if="display_discount"
                                            style="background-color:#6989b7;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;"
                                            class="text-left"
                                            groups="product.group_discount_per_so_line">
                                            <span>
                                                <font color="#ffffff">
                                                    <strong>Disc.%</strong>
                                                </font>
                                            </span>
                                        </th>
                                        <th name="th_subtotal" class="text-left" width="10%"
                                            style="background-color:#6989b7;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                            <span groups="account.group_show_line_subtotals_tax_excluded">
                                                <font color="#ffffff">
                                                    <strong>Amount</strong>
                                                </font>
                                            </span>
                                            <span groups="account.group_show_line_subtotals_tax_included">
                                                <font color="#ffffff">
                                                    <strong>Total Price</strong>
                                                </font>
                                            </span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                    <t t-set="total_count" t-value="0"/>

                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="i" t-value="1"/>
                                    <t t-foreach="lines" t-as="line">

                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">
                                                <td name="td_name"
                                                    style="border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                    <span t-esc="i"/>
                                                    <t t-set="i" t-value="i+1"/>
                                                </td>
                                                <td name="td_name"
                                                    style="border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <td name="td_quantity" class="text-right"
                                                    style="border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td name="td_priceunit" class="text-right"
                                                    style="border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td t-if="display_discount" class="text-right"
                                                    style="border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;"
                                                    groups="product.group_discount_per_so_line">
                                                    <span t-field="line.discount"/>
                                                </td>
                                                <td name="td_subtotal" class="text-right o_price_total"
                                                    style="border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                    <span t-field="line.price_subtotal"
                                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span t-field="line.price_total"
                                                          groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99"
                                                    style="border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99"
                                                    style="border-color:#6989b7 !important;">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-right">
                                                <td name="td_section_subtotal" colspan="99"
                                                    style="border-color:white !important;">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span
                                                            t-esc="current_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                    />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <tr>
                                        <td colspan="3"
                                            style="background-color:#ffffff;border-color:#ffffff !important;border-right: 1px Solid #ffffff !important;border-left: 1px Solid #ffffff !important;border-top: 1px Solid #ffffff !important;border-bottom: 1px Solid #ffffff !important;">
                                        </td>
                                        <td
                                                style="text-align:center;background-color:#6989b7;border-color:#ffffff !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #ffffff !important;border-top: 1px Solid #ffffff !important;border-bottom: 1px Solid #ffffff !important;">
                                            <font color="#ffffff">
                                                <strong>Total</strong>
                                            </font>
                                        </td>
                                        <td style="text-align:right;background-color:#6989b7;border-color:#ffffff !important;border-right: 1px Solid #ffffff !important;border-left: 1px Solid #ffffff !important;border-top: 1px Solid #ffffff !important;border-bottom: 1px Solid #ffffff !important;">
                                            <font color="#ffffff">
                                                <t t-esc="current_subtotal"/>
                                            </font>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-6">
                            <aside id="info-block">
                                <section class="file-marker">
                                    <div>
                                        <div class="box-title">
                                            <span style="font-color:#6989b7;">
                                                <font color="#6989b7">
                                                    <strong>Payment Details</strong>
                                                </font>
                                            </span>
                                        </div>
                                        <t>
                                            <table
                                                    name="invoice_line_table"
                                                    style="padding:5px;width:100%;">
                                                <tbody>
                                                    <tr t-if="o.company_id.beneficiary_name">
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <font color="#6989b7">
                                                                <strong>Beneficiary Name</strong>
                                                            </font>
                                                        </td>
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <t t-esc="o.company_id.beneficiary_name"/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="company.iban">
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <font color="#6989b7">
                                                                <strong>IBAN</strong>
                                                            </font>
                                                        </td>
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <t t-esc="o.company_id.iban"/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="company.swift_code">
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <font color="#6989b7">
                                                                <strong>Swift Code</strong>
                                                            </font>
                                                        </td>
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <t t-esc="o.company_id.swift_code"/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="company.branch_address">
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <font color="#6989b7">
                                                                <strong>Branch Address</strong>
                                                            </font>
                                                        </td>
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <t t-esc="o.company_id.branch_address"/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="company.currency_id">
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <font color="#6989b7">
                                                                <strong>Currency</strong>
                                                            </font>
                                                        </td>
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <t t-esc="o.company_id.currency_id.name"/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="company.account_type">
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <font color="#6989b7">
                                                                <strong>Account Type</strong>
                                                            </font>
                                                        </td>
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <t t-esc="o.company_id.account_type"/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="company.bank_name">
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <font color="#6989b7">
                                                                <strong>Bank Name</strong>
                                                            </font>
                                                        </td>
                                                        <td style="font-size:14px;padding:5px;border-color:#6989b7 !important;border-right: 1px Solid #6989b7 !important;border-left: 1px Solid #6989b7 !important;border-top: 1px Solid #6989b7 !important;border-bottom: 1px Solid #6989b7 !important;">
                                                            <t t-esc="o.company_id.bank_name"/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
